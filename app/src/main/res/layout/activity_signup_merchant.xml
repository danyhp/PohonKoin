<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupMerchantActivity">


    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="@string/filldata"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="50dp"
        android:text="@string/name"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/merchant_layout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginStart="200dp"
        android:layout_marginTop="40dp"
        android:hint="@string/your_name"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="90dp"
        android:text="@string/Place"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/merchant_layout_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/merchant_layout_name"
        android:layout_marginStart="200dp"
        android:hint="@string/your_place"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="132dp"
        android:text="@string/idcard"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/merchant_layout_idcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/merchant_layout_place"
        android:layout_marginStart="200dp"
        android:hint="@string/your_idnumber"
        android:inputType="number"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="174dp"
        android:text="@string/age"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/merchant_layout_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/merchant_layout_idcard"
        android:layout_marginStart="200dp"
        android:hint="@string/your_age"
        android:inputType="number"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="216dp"
        android:text="@string/WANumber"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/merchant_layout_wanumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/merchant_layout_age"
        android:layout_marginStart="200dp"
        android:hint="@string/your_wa"
        android:inputType="number"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="141dp"
        android:gravity="center_horizontal"
        android:text="@string/Click"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_sign_up"
        style="@style/TextContent.BtnKoin"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp"
        android:background="@color/colorPrimary"
        android:text="@string/signUp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="@string/pohonkoin_copyright"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>