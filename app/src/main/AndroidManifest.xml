<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mmithb.danyhp.pohonkoin">

    <!-- To auto-complete the email text field in the EmailLoginActivity form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoTitleBar" />
        <activity
            android:name=".EmailLoginActivity"
            android:theme="@style/NoTitleBar"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GoogleLoginActivity"
            android:theme="@style/NoTitleBar" />

        <activity
            android:name=".MainPageActivity"
            android:theme="@style/NoTitleBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainPageActivity" />
        <activity
            android:name=".BulletinActivity"
            android:label="@string/title_activity_bulletin"
            android:parentActivityName=".MainPageActivity" />
        <activity
            android:name=".BulletinPageActivity"
            android:label="@string/title_activity_bulletin"
            android:parentActivityName=".MainPageActivity" />

        <activity
            android:name=".MerchantLoginActivity"
            android:parentActivityName=".MainPageActivity"
            android:theme="@style/NoTitleBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SignupMerchantActivity"
            android:label="@string/title_activity_merchant_signup"
            android:parentActivityName=".MerchantLoginActivity" />

        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_account_profile"
            android:parentActivityName=".MainPageActivity" />


        <activity
            android:name=".KoinPageActivity"
            android:label="@string/title_activity_koin_page"
            android:parentActivityName=".MainPageActivity" />

        <activity
            android:name=".SendKoinActivity"
            android:label="@string/title_activity_send_koin"
            android:parentActivityName=".KoinPageActivity" />
        <activity
            android:name=".CreateTreeActivity"
            android:label="@string/title_activity_create_tree"
            android:parentActivityName=".KoinPageActivity" />
        <activity
            android:name=".CreatedTreeActivity"
            android:label="@string/title_activity_created_tree"
            android:parentActivityName=".KoinPageActivity" />
        <activity
            android:name=".ReceiveKoinActivity"
            android:label="@string/title_activity_receive_koin"
            android:parentActivityName=".KoinPageActivity" />
        <activity
            android:name=".MerchantActivity"
            android:parentActivityName=".KoinPageActivity" />
        <activity
            android:name=".KoinHistory"
            android:label="@string/title_activity_koin_history"
            android:parentActivityName=".KoinPageActivity" />


        <activity
            android:name=".CreateAccountActivity"
            android:theme="@style/NoTitleBar" />
        <activity
            android:name=".ResetPasswordActivity"
            android:theme="@style/NoTitleBar"
            android:windowSoftInputMode="adjustPan" />


        <activity
            android:name=".QRCodeSendKoinActivity"
            android:theme="@style/NoTitleBar" />
        <activity
            android:name=".OwnQrCode"
            android:theme="@style/NoTitleBar" />
        <activity
            android:name=".TreeQrCode"
            android:theme="@style/NoTitleBar" />
        <activity
            android:name=".CreateQrCodeToSendKoin"
            android:theme="@style/NoTitleBar" />

        <activity
            android:name=".NavigationActivity"
            android:label="@string/title_activity_navigation"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>