<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mmithb.danyhp.pohonkoin">

    <!-- To auto-complete the email text field in the EmailLoginActivity form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".EmailLoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/NoTitleBar"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".GoogleLoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MerchantLoginActivity"
            android:theme="@style/NoTitleBar" />
        <activity
            android:name=".MainPageActivity"
            android:theme="@style/NoTitleBar" />
        <activity
            android:name=".KoinPageActivity"
            android:theme="@style/NoTitleBar" />
        <activity android:name=".SendKoinActivity" />
        <activity android:name=".CreateTreeActivity" />
        <activity android:name=".ReceiveKoinActivity" />
        <activity android:name=".SignupMerchantActivity" />
        <activity android:name=".MerchantActivity" />
        <activity android:name=".KoinHistory"></activity>
    </application>

</manifest>